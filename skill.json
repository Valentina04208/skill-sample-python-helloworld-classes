const Alexa = require('ask-sdk-core');

const LaunchRequestHandler = {
    canHandle(handlerInput) {
        return Alexa.getRequestType(handlerInput.requestEnvelope) === 'LaunchRequest';
    },
    handle(handlerInput) {
        const speakOutput = 'Bienvenido a YouTube Skill. Dime el nombre del video que quieres reproducir.';
        return handlerInput.responseBuilder
            .speak(speakOutput)
            .reprompt(speakOutput)
            .getResponse();
    }
};

const PlayYouTubeVideoIntentHandler = {
    canHandle(handlerInput) {
        return Alexa.getRequestType(handlerInput.requestEnvelope) === 'IntentRequest'
            && Alexa.getIntentName(handlerInput.requestEnvelope) === 'PlayYouTubeVideoIntent';
    },
    handle(handlerInput) {
        const videoTitle = handlerInput.requestEnvelope.request.intent.slots.videoTitle.value;
        const speakOutput = `Reproduciendo ${videoTitle} en tu dispositivo vinculado.`;
        // Aquí se realizaría la integración con YouTube
        return handlerInput.responseBuilder
            .speak(speakOutput)
            .getResponse();
    }
};

exports.handler = Alexa.SkillBuilders.custom()
    .addRequestHandlers(
        LaunchRequestHandler,
        PlayYouTubeVideoIntentHandler
    )
    .lambda();
